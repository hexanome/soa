<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="Mockups.AgentListItem"
	x:Name="UserControl"
	d:DesignWidth="640" d:DesignHeight="480">

	<Grid x:Name="LayoutRoot" Height="50">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto"/>
			<ColumnDefinition/>
		</Grid.ColumnDefinitions>
		<Image HorizontalAlignment="Left" Margin="0" Width="50" Height="50" Source="/Mockups;component/Icons/Windows 7 (128).png"/>
		<TextBlock Grid.Column="1" HorizontalAlignment="Left" Margin="10,0,0,2" TextWrapping="Wrap" Text="{Binding AgentName, ElementName=UserControl}" VerticalAlignment="Center" FontSize="18.667"/>
	</Grid>
</UserControl>