<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="Mockups.ContactConfig"
	x:Name="UserControl"
	d:DesignWidth="640" d:DesignHeight="480" Height="100">

	<Grid x:Name="LayoutRoot">
		<Grid.RowDefinitions>
			<RowDefinition/>
			<RowDefinition/>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition/>
			<ColumnDefinition/>
		</Grid.ColumnDefinitions>
		<TextBlock Margin="0" TextWrapping="Wrap" Text="Client :" VerticalAlignment="Center"/>
		<TextBlock Margin="0" TextWrapping="Wrap" Text="Motif :" VerticalAlignment="Center" Grid.Column="1"/>
		<Grid Margin="0,0,30,0" Grid.Row="1" VerticalAlignment="Center" d:LayoutOverrides="Height" >
			<Grid.ColumnDefinitions>
				<ColumnDefinition/>
				<ColumnDefinition Width="Auto"/>
			</Grid.ColumnDefinitions>
			<TextBox TextWrapping="Wrap" Text="Nom Client 1" VerticalAlignment="Center"/>
			<Button Content="..." HorizontalAlignment="Right" Margin="5,0,0,0" Grid.Column="1" Padding="4,1"/>
		</Grid>
		<TextBox Margin="0,0,10,0" Grid.Row="1" TextWrapping="Wrap" Text="Prêt" VerticalAlignment="Center" Grid.Column="1"/>
	</Grid>
</UserControl>